<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Panel</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <script src="jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin">Admin Panel</a>
    </div>
    <ul class="nav navbar-nav">

      <li><a href="/customer">Home</a></li>

      <li><a href="/admin">Admin Home</a></li>

       <li><a href="/admin/category">Category Panel</a></li>

       <li class="active"><a href="/admin/product">Product Panel</a></li>

       <li><a href="/admin/order">Order Panel</a></li>

    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Log Out</a></li>
    </ul>
  </div>
</nav>
  
<div class="container">

 <p><b><%= errors %></b></p>

 <div class="form-group">

<form method='post' encType="multipart/form-data">

    <input type="hidden" name="cId" value="<%= productName.id%>">

    <label>Product Name</label><br>
    <input type="text" name="pname" class="form-control" value="<%= productName.name%>" required><br>

    <label>Product SKU</label><br>
    <input type="text" name="psku" class="form-control" value="<%= productName.sku%>" readonly><br>

    <label>Product Price</label><br>
    <input type="number" name="pprice" class="form-control" value="<%= productName.price%>" required><br>

    <label>Product Description</label><br>
    <textarea rows="4" cols="50" class="form-control" name="pdescription" required><%= productName.description%></textarea><br>

    <label>Product In Stock</label><br>
    <input type="number" name="pstock" class="form-control" value="<%= productName.quantity%>" required><br>

    <label>Product Category </label><br>
      <select class="form-control" name="pcategory1">
                <option value="Same">Same As Before</option>
                <% options.forEach(function(op){ %>
                <option value="<%= op.name %>"><%= op.name %></option>
                <% }) %>
             </select><br>

        <input type="file" class="form-control" name="filename" /><br><br>

        <input type='submit' class="btn btn-success btn-block" value='Edit Product' />
</form><br><br>  

</div>

</div>

</body>
</html>
